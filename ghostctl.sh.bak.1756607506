#!/usr/bin/env bash
set -Eeuo pipefail

usage() {
  echo "ghostctl - GhostOps control"
  echo "Usage: $0 <command> [args]"
  echo "Commands:"
  echo "  rotate-net   Rotate MAC/IP via ghostnet module"
  echo "  verify-net   Verify network state"
}

case "${1:-}" in
  rotate-net)
    shift
    /home/kehd/ghostops/modules/ghostnet.sh "$@"
    ;;
  verify-net)
    shift
    echo "Verification logic not yet implemented"
    ;;
  *)
    usage
    ;;
esac
