{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^0x[0-9A-Fa-f]+$"
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pending","completed"]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "level": {
            "type": "string",
            "enum": ["beginner","intermediate","advanced","expert"]
          }
        },
        "required": ["id","name","status","timestamp","level"],
        "additionalProperties": false
      }
    }
  },
  "required": ["milestones"],
  "additionalProperties": false
}
